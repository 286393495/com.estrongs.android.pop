<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/home_device_progress_bg_color" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient android:startColor="@color/home_device_progress_color" android:endColor="@color/home_device_progress_color" android:angle="0.0" android:centerY="0.75" android:centerColor="@color/home_device_progress_color" />
                <corners android:radius="5.0dip" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/home_device_progress_color" />
                <corners android:radius="5.0dip" />
            </shape>
        </clip>
    </item>
</layer-list>